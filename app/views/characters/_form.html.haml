= form_for @character do |f|
  - if @character.errors.any?
    #error_explanation
      %h2= "#{pluralize(@character.errors.count, "error")} prohibited this character from being saved:"
      %ul
        - @character.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :player
    = f.text_field :player
  .field
    = f.label :age
    = f.text_field :age
  .field
    = f.label :race
    = f.text_field :race
  .field
    = f.label :height
    = f.text_field :height
  .field
    = f.label :body_type
    = f.text_field :body_type
  .actions
    = f.submit 'Save'
