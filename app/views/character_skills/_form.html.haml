= form_for @character_skill do |f|
  - if @character_skill.errors.any?
    #error_explanation
      %h2= "#{pluralize(@character_skill.errors.count, "error")} prohibited this character_skill from being saved:"
      %ul
        - @character_skill.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :character
    = f.text_field :character
  .field
    = f.label :skill
    = f.text_field :skill
  .field
    = f.label :score
    = f.number_field :score
  .actions
    = f.submit 'Save'
