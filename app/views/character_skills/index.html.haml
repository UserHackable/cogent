%h1 Listing character_skills

%table
  %thead
    %tr
      %th Character
      %th Skill
      %th Score
      %th
      %th
      %th

  %tbody
    - @character_skills.each do |character_skill|
      %tr
        %td= character_skill.character
        %td= character_skill.skill
        %td= character_skill.score
        %td= link_to 'Show', character_skill
        %td= link_to 'Edit', edit_character_skill_path(character_skill)
        %td= link_to 'Destroy', character_skill, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Character skill', new_character_skill_path
